{
  "AllowedHosts": "*",

  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Debug"
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Serilog LOGs\\logfile.log",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {CorrelationId} {Level:u3}] {Username} {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },

  "ConnectionStrings": {
    "ModsenAppDataBase": "Server=localhost\\SQLEXPRESS01;Database=ModsenAppDB;Trusted_Connection=True;",
    "ModsenIdentityServerDataBase": "Server=localhost\\SQLEXPRESS01;Database=ModsenIdentityServerDB;Trusted_Connection=True;"
  }
}
